<%- include ("partials/Header") %>
<div class="d-flex justify-content-center mt-5">
  <button class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">Agregar comida a la base de datos</button>

  <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <form action="/count" method="POST" >
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Agregar comida a la base de datos<h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
            <input class="mt-3" type="text" name="foodName" value="" placeholder="Nombre"><br>
            <input class="mt-3" type="text" name="foodBrand" value="" placeholder="Marca"><br>
            <input class="mt-3" type="text" name="foodWeight" value="" placeholder="Peso(kilos)"><br>
            <input class="mt-3" type="text" name="foodLiters" value="" placeholder="Peso(litros)"><br>
            <input class="mt-3" type="text" name="caloriesContainer" value="" placeholder="Calorías por envase"><br>
            <input class="mt-3" type="text" name="foodPortion" value="" placeholder="Porción(kilos)"><br>
            <input class="mt-3" type="text" name="portionLiters" value="" placeholder="Porción(litros)"><br>
            <input class="mt-3" type="text" name="foodPiece" value="" placeholder="Pieza"><br>
            <input class="mt-3" type="text" name="caloriesPortion" value="" placeholder="Calorías por porción"><br>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
          <button type="submit" class="btn btn-primary">Guardar</button>
        </div>
        </form>
      </div>
    </div>
  </div>
</div>
<%- include ("partials/Footer") %>
